<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="More Details"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ViewUser"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="236dp"
        android:backgroundTint="@color/btn_blue"
        android:text="View Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/ManagePost"
        android:layout_width="194dp"
        android:layout_height="53dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/btn_blue"
        android:text="Manage My Post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewUser" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="169dp"
        android:layout_height="165dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/prof" />


    <Button
        android:id="@+id/Logout"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/btn_blue"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ManagePost" />

</androidx.constraintlayout.widget.ConstraintLayout>